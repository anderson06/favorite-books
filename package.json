{
  "name": "favorite-books",
  "version": "1.0.0",
  "description": "Select your favorite books",
  "homepage": "https://anderson06.github.io/favorite-books",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server",
    "test:unit": "NODE_ENV=test jest",
    "test-server": "NODE_ENV=test webpack && http-server ./dist -s -p 8081",
    "auto-test:e2e": "npm run test-server & (NODE_ENV=test wdio; wdio_ret=$?; kill $(lsof -t -i:8081); npm run clean; exit $wdio_ret)",
    "test:e2e": "NODE_ENV=test wdio",
    "test": "npm run test:unit && npm run test:e2e",
    "lint": "eslint src test e2e --ext .js,.jsx",
    "predeploy": "NODE_ENV=production webpack",
    "deploy": "gh-pages -d dist",
    "postdeploy": "npm run clean",
    "clean": "rm -fr ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anderson06/favorite-books.git"
  },
  "bugs": {
    "url": "https://github.com/anderson06/favorite-books/issues"
  },
  "keywords": [
    "webdriverio",
    "cucumber",
    "test",
    "selenium"
  ],
  "author": "Anderson Campos <andersoncampos.m@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "7.1.1",
    "axios": "^0.16.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.0.1",
    "babel-register": "~6.24.0",
    "babel-runtime": "6.23.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chai": "~4.0.0",
    "chalk": "1.1.3",
    "classnames": "^2.2.5",
    "css-loader": "0.28.4",
    "cucumber": "~2.2.0",
    "diacritics": "^1.3.0",
    "dotenv": "4.0.0",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.0.0",
    "postcss-loader": "2.0.6",
    "promise": "7.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dev-utils": "^3.0.1",
    "react-dom": "^15.6.1",
    "react-error-overlay": "^1.0.8",
    "style-loader": "0.18.2",
    "sw-precache-webpack-plugin": "0.11.3",
    "url-loader": "0.5.9",
    "wdio-cucumber-framework": "~0.3.0",
    "wdio-phantomjs-service": "~0.2.2",
    "wdio-selenium-standalone-service": "~0.0.8",
    "wdio-spec-reporter": "~0.1.0",
    "webdriverio": "~4.8.0",
    "webpack-manifest-plugin": "1.1.0",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-polyfill": "~6.23.0",
    "enzyme": "^2.9.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-webdriverio": "^1.0.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "faker": "^4.1.0",
    "gh-pages": "^1.0.0",
    "http-server": "~0.10.0",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "react-test-renderer": "^15.6.1",
    "regenerator-runtime": "^0.10.5",
    "sass-loader": "^6.0.6",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.5.0"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(jsx|js)$",
    "setupFiles": [
      "<rootDir>/test/__mocks__/localStorageMock.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  }
}
